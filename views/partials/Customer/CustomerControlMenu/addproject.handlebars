<div class="table-wrapper open-invites">
    <h2>Add Projects</h2>
    <table>
        <thead>
            <tr>
                <th class="customer-add-project-name">Project Name</span></th>
                <th class="customer-add-project-description">Project Description</span></th>
                <th class="customer-add-project-due-date">Due Date <span>(MM/DD/YYYY)</span></th>
                <th cladd="customer-add-project-cost">Project Cost</th>
                <th class="customer-add-project-spacer"></th>
            </tr>
        </thead>
        <tbody class="project-table">
            <tr>
                <td><input type="text" name="projectName" id="projectName" value="" placeholder="Project Name"></td>
                <td><input type="text" name="projectDes" id="projectDes" value="" placeholder="Enter Description here..."></td>
                <td><input type="text" name="projectDue" id="projectDue" value="" placeholder="Due Date"></td>
                <td><input type="text" name="projectCost" id="projectCost" value="" placeholder="Cost"></td>
                <td><a id="addProject" href="" class="button fit small icon fa-plus">Add Project</a></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="dev-slider devcontrol">
    <p id="slider-instruction">Select proficiency and/or familiarity required for this project</p>
    <p><label for="range_weight">Angular: <span class="slider_label"></span></label> <input type="range" name="angular"
            class="slider" min="0" max="100" value="0">
        <span id="projectAngular" class="slider_label">0</span>%</p>

    <p><label for="range_weight">CSS: <span class="slider_label"></span></label> <input type="range" name="css" class="slider"
            min="0" max="100" value="0">
        <span id="projectCSS" class="slider_label">0</span>%</p>

    <p><label for="range_weight">HTML: <span class="slider_label"></span></label> <input type="range" name="html" class="slider"
            min="0" max="100" value="0">
        <span id="projectHTML" class="slider_label">0</span>%</p>

    <p><label for="range_weight">Java: <span class="slider_label"></span></label> <input type="range" name="java" class="slider"
            min="0" max="100" value="0">
        <span id="projectJava" class="slider_label">0</span>%</p>

    <p><label for="range_weight">Javascript: <span class="slider_label"></span></label> <input type="range" name="javascript"
            class="slider" min="0" max="100" value="0">
        <span id="projectJavascript" class="slider_label">0</span>%</p>

    <p><label for="range_weight">Node.js: <span class="slider_label"></span></label> <input type="range" name="nodejs"
            class="slider" min="0" max="100" value="0">
        <span id="projectNodeJS" class="slider_label">0</span>%</p>

    <p><label for="range_weight">Python: <span class="slider_label"></span></label> <input type="range" name="python"
            class="slider" min="0" max="100" value="0">
        <span id="projectPython" class="slider_label">0</span>%</p>

    <p><label for="range_weight">React: <span class="slider_label"></span></label> <input type="range" name="react"
            class="slider" min="0" max="100" value="0">
        <span id="projectReact" class="slider_label">0</span>%</p>
</div>